<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:id="@+id/setup_name"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:background="@drawable/custom_setup_input"
                android:drawableStart="@drawable/custom_person"
                android:drawablePadding="6dp"
                android:paddingVertical="15dp"
                android:layout_marginVertical="6dp"
                android:paddingHorizontal="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/setup_email"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:background="@drawable/custom_setup_input"
                android:drawableStart="@drawable/custom_email"
                android:drawablePadding="6dp"
                android:paddingVertical="15dp"
                android:layout_marginVertical="6dp"
                android:paddingHorizontal="5dp"
                android:layout_below="@+id/setup_name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/setup_password"
                android:layout_below="@+id/setup_email"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:drawableStart="@drawable/custom_lock"
                android:drawablePadding="6dp"
                android:background="@drawable/custom_setup_input"
                android:paddingVertical="15dp"
                android:paddingHorizontal="5dp"
                android:layout_marginVertical="6dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:id="@+id/setup_confirm_password"
                android:layout_below="@+id/setup_password"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:drawableStart="@drawable/custom_lock"
                android:drawablePadding="6dp"
                android:background="@drawable/custom_setup_input"
                android:paddingVertical="15dp"
                android:paddingHorizontal="5dp"
                android:layout_marginVertical="6dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setup_signup"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@+id/setup_confirm_password"
                android:textAlignment="center"
                android:text="SIGNUP"
                android:background="@drawable/button_background"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account_signin"
                android:layout_below="@+id/setup_signup"
                android:id="@+id/setup_signin"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginHorizontal="5dp"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>